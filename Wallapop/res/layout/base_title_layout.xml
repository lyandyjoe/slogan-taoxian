<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_container_height"
        android:background="@color/actionbar_color"
        android:paddingLeft="@dimen/header_button_padding_border"
        android:paddingRight="@dimen/header_button_padding_border" >
    </RelativeLayout>

    <View
        android:id="@+id/main_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/guide_divider" />

</LinearLayout>